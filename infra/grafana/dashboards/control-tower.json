{
  "dashboard": {
    "title": "Control Tower â€“ Governance Metrics",
    "uid": "ct-governance",
    "tags": ["control-tower", "governance", "genai"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "API Request Rate",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "rate(http_requests_total{service=\"ct-backend\"}[5m])",
            "legendFormat": "{{method}} {{path}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "API Latency (p99)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{service=\"ct-backend\"}[5m]))",
            "legendFormat": "p99"
          }
        ]
      },
      {
        "id": 3,
        "title": "Evaluation Pass Rate",
        "type": "gauge",
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "control_tower_eval_pass_rate",
            "legendFormat": "Pass Rate"
          }
        ]
      },
      {
        "id": 4,
        "title": "Open Findings by Severity",
        "type": "piechart",
        "gridPos": { "h": 8, "w": 8, "x": 8, "y": 8 },
        "targets": [
          {
            "expr": "control_tower_findings_open",
            "legendFormat": "{{severity}}"
          }
        ]
      },
      {
        "id": 5,
        "title": "Evidence Artifacts Created",
        "type": "stat",
        "gridPos": { "h": 8, "w": 8, "x": 16, "y": 8 },
        "targets": [
          {
            "expr": "control_tower_evidence_artifacts_total",
            "legendFormat": "Total"
          }
        ]
      }
    ]
  }
}
